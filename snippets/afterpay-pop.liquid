<div class="afterpay-popup">
    <a class="preorder-popup_mask preorder-close" href="javascript:void(0);">&nbsp;</a>
  <div class="preorder-popup_inner"><span class="afterpay-close">&times; </span>
      <div class="preorder-popup_content">
        <div class="afterpay-logo">{% include 'afterpay-icon' %} </div>
        {% if settings.afterpay_main_heading != blank %}
       	 	<h3 class="bold">{{ settings.afterpay_main_heading }}</h3>
        {%endif%}
        <div class="rte">
          <div>{{settings.afterpay_description | replace: 'strong','div class="bold afterpay-desc" '}} </div>
        </div>
        {% comment %}
        <div class="pre-order-ok-btn">
        	<a class="btn-preorder btn-preorder-solid" href="{{ settings.afterpay_link}}">{{ settings.afterpay_btn_text | escape }}</a>
        </div>
        {% endcomment %}
      </div>
    </div>
</div>