{
  "name": "Mym icons",
  "class": "index-section",
  "settings": [
   {
      "type": "richtext",
      "id": "icon1",
      "label": "Text 1"
    },
	{
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "richtext",
      "id": "icon2",
      "label": "Text 2"
    },
	{
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "richtext",
      "id": "icon3",
      "label": "Text 3"
    },
	{
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3"
    }
  ]
}
{% endschema %}