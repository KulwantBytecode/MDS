<div class="mym-icons page-width">
	<div class="icons" data-aos="fade-up" data-aos-duration="500" data-aos-delay="000">
    <img src="{{section.settings.image1 | img_url : 'master'}}" />
		<p>	{{section.settings.icon1 | strip_html }} </p>
	</div>
	<div class="icons" data-aos="fade-up" data-aos-duration="500" data-aos-delay="300">
    <img src="{{section.settings.image2 | img_url : 'master'}}" />
		<p>	{{section.settings.icon2 | strip_html }} </p>
	</div>
  <div class="icons" data-aos="fade-up" data-aos-duration="500" data-aos-delay="900">
    <img src="{{section.settings.image3 | img_url : 'master'}}" />
    <p> {{section.settings.icon3 | strip_html }} </p>
  </div>
</div>

