<div class="page-width">
  <section class="lp__content">
    {% assign order_number = 0  %}
    {% if section.settings.order %}
      {% assign order_number = 1  %}
    {% endif %}
    {% for block in section.blocks %}
      {% case block.type %}
       {% when 'topsection' %}
        {% if block.settings.img != blank %}
          <div class="lp__descripion lp__descripion_{{forloop.index}}{%if forloop.last%} lp_last_section {%endif%}">
            {% assign index = forloop.index | modulo:2 %}
            <div class="lp__descripion--img {% if index == order_number %} lp-order-section {% endif %}">
              <img class="hide-mobile" data-aos="zoom-in-up" data-aos-duration="1000" src="{{block.settings.img | img_url:'master' }}" alt="Stiching"/>
              <img class="hide-desktop" {% if index == order_number %} data-aos="fade-left" {%else%} data-aos="fade-right" {%endif%} data-aos-duration="600" src="{{block.settings.img_mob | img_url:'master' }}" alt="Make Your Mark"/>
            </div>
            <div class="lp__descripion--text hide-desktop">
              <h1> {{block.settings.heading}} </h1>
              <p> {{block.settings.description}} </p>
            </div>
            <div class="lp__descripion--text hide-mobile" data-aos="fade-up" data-aos-duration="1000">
              <h1> {{block.settings.heading}} </h1>
              <p> {{block.settings.description}} </p>
            </div>
          </div>
      {% endif %}
     {% endcase %}
    {% endfor %}
  </section>
</div>
{% schema %}
  {
   "settings": [
      {
      "type":"checkbox",
       "id": "order",
       "label" : "Change Order"
      },
      {
       "type": "text",
       "id":"shopnowtext",
       "label": "SHOP NOW btn",
       "default": "Shop Now"
      },
      {
       "type": "url",
       "id":"shopnowurl",
       "label": "SHOP NOW link"
      }
    ],
  "blocks": [
      {

        "type": "topsection",
        "name": "MYM Page Setting",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          },
          {
            "type": "image_picker",
            "id": "img_mob",
            "label": "Image Mobile"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "description",
            "label": "First Section Description"
          }
       ]
      }
   ]
  }
{% endschema %}