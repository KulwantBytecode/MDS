<div class="new_season page-width">
<div class="new_season_row">
<div class="new_season_col">
<div class="new_season_collection">
<div class="new_season_collection_dis">
  {% if section.settings.Heading != blank %}
<h2> {{ section.settings.Heading }}</h2>
  {% endif %}
  {% if section.settings.info != blank %}
  <p>{{ section.settings.info }}</p>
  {% endif %}
</div>
  {% for block in section.blocks %}
    {% assign customcollectionnew = collections[block.settings.collectionnew] %}
<div class="new_season_collection_item">
<div class="new_season_collection_media">
 <a href="{{ customcollectionnew.url }}">
<img src="{{ customcollectionnew.featured_image | img_url:'master' }}" width="300px" height="300px"  />
 </a>
</div>
<a href="{{ customcollectionnew.url }}"><span class='link-colllection'>{{ block.settings.colltext}}</span> <span class='arrow-colllection'>â†’</span></a>
</div>
  {% endfor %}
</div>
</div>
<div class="new_season_col">
  <div class="new_season_media">
    {% assign customcollection = collections[section.settings.collectionimage] %}
    <h2>{{ collection.title }}</h2>
    <a href="{{ customcollection.url }}">
      {% if section.settings.cus_image != blank %}
    <img src="{{ section.settings.cus_image | img_url:'master' }}">
        {% endif %}
    </a>
    </div>
</div>
</div>
</div>
{% schema %}
  {
    "name": "New Season Home Page",
    "settings": [
      {
        "type" : "text",
        "id" : "Heading",
        "label"  :"Section Title"
      },
      {
        "type" : "text",
        "id" : "info",
        "label"  :"Additional Text"
      },
      {
        "type" : "image_picker",
        "id" : "cus_image",
        "label": "Select image for collection"
      },
       {
          "type" : "collection",
          "id" : "collectionimage",
          "label" : "Add Collection"
        }
    ],    
    "blocks" : [
      {
        "name" : "Collection",
        "type" : "collection",
      "settings" : [
        {
          "type" : "collection",
          "id" : "collectionnew",
          "label" : "Add Collection"
        },
        {
          "type" : "text",
          "id" : "colltext",
          "label" : "Collection Title"
        }
      ]  
      }
    ],
"presets":[
{
"name":"New Season Home Page"
}
]
  }
{% endschema %}