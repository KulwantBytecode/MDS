<style>
  .basereviews1{
    margin-left:25px;
    color: #ffffff;
  }
  @media screen and (min-width: 990px){
    .image-with-text__content {
      padding: 6rem 7rem 7rem;
    }  
  }

 .hr-image-with-text__content{
    padding: 6rem 7rem 7rem;
   display: flex;
    flex-direction: column;
    align-items: flex-start;
    height: 100%;
    justify-content: center;
}

.hr-image-with-text__content h2{
  color: #ffffff!important;
  font-size: 30px!important;
  font-family: 'juanaextralight';
}

.hr-image-with-text__text p{
   color: #ffffff!important;
}
 .hr-image-with-text__grid  a.button{
    background-color: #ffffff!important;
 }

</style>

<div class="hr-image-with-text home_review_slider_sec page-width color-scheme-background-2">
  <div class="home_review_slider">
     {% for block in section.blocks %}
    <div class="home_review_slide" style="background-color: {{ block.settings.color_title }}">
     
      <div class="hr-image-with-text__grid color-background-2 grid grid--gapless grid--1-col grid--2-col-tablet gradient">
        <div class="grid__item">
          {% if block.settings.image != blank %}
          <div class="hr-image-with-text__media hr-image-with-text__media--small media">
            <img src="{{ block.settings.image | img_url:'master' }}">
          </div>
            {% endif %}
        </div>
        <div class="grid__item">
          <div class="hr-image-with-text__content hr-image-with-text__content--small" style="background-color: {{ block.settings.color_title }}">
            {% if block.settings.heading != blank %}
              <h2 class="hr-image-with-text__heading h1">
              {{ block.settings.block.settings.heading }}The reviews are in...</h2>
              {% endif %}
              <div class="hr-image-with-text__text rte">
                {% if block.settings.starimages != blank %}
                 <img src="{{ block.settings.starimages | img_url:'master' }}"> 
                 {% endif %}
                  <span class="basereviews1">{{ block.settings.startscount }}</span>
                 <p>{{ block.settings.text }}</p>
              </div>
              <a href="{{ block.settings.button_link }}" class="button button--primary">{{ block.settings.button_label }}</a>
          </div>
        </div>
      </div>
    </div>
   {% endfor %}
  </div>
   
</div>

{% schema %}
  {
    "name": "Home Reviews Slider",
    "settings": [
      
    ],
    "blocks": [
     {
      "type": "reviews-content",
      "name": "Reviews Content",
       "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Review Image"
          },   
         {
           "type" : "image_picker",
           "id" : "starimages",
           "label" : "Select Stars Image"
         },
         {
            "type": "color",
            "id": "color_title",
            "label": "Background color",
            "default": "#ccc"
          },
          {
            "type": "text",
            "id": "heading",
            "default": "Image with text",
            "label": "heading"
          },
          {
            "type": "richtext",
            "id": "text",
            "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
            "label": "Description"
          },
         {
           "type" : "text",
           "id" : "startscount",
           "label" : "Counting of stars",
           "default" : "1M+ Customers"
         },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }         
       ]
     } 
    ],
  "presets": [
    {
      "name": "Home Review Slider"
    }
  ]    
  }
{% endschema %}

