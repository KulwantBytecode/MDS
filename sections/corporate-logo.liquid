<div class="featured_logo_section">
<div class="page-width">
  <h2 class="customlogo_header {% unless section.settings.heading %}hide{% endunless %}">{{ section.settings.heading }}</h2>
<ul class="featured-reviews hide-mobile">
    {% if section.settings.showvogueicon %}
    <li class="'vogue-icon">{{ section.settings.icon1 }}</li>
    {% endif %}    
    {% if section.settings.showcqicon %}
    <li class="cq-icon">{{ section.settings.icon2 }}</li>
    {% endif %}  
    {% if section.settings.showforbesicon %}
    <li>{{ section.settings.icon3 }}</li>
    {% endif %}      
    {% if section.settings.showmarieicon %}
    <li>{{ section.settings.icon4 }}</li>
    {% endif %}    
    {% if section.settings.showsydneyicon %}
    <li>{{ section.settings.icon5 }}</li>
    {% endif %}    
    {% if section.settings.sixicon %}
    <li>{{ section.settings.icon6 }}</li>
    {% endif %} 
</ul>
  
      <ul class="featured-reviews hide-desktop">
      {% if section.settings.showvogueicon %}
      <li>{{ section.settings.icon1 }}</li>
      {% endif %}    
      {% if section.settings.showcqicon %}
      <li>{{ section.settings.icon2 }}</li>
      {% endif %}  
      {% if section.settings.showforbesicon %}
      <li>{{ section.settings.icon3 }}</li>
      {% endif %}      
      {% if section.settings.showmarieicon %}
      <li>{{ section.settings.icon4 }}</li>
      {% endif %}    
      {% if section.settings.showsydneyicon %}
      <li>{{ section.settings.icon5 }}</li>
      {% endif %}  
       {% if section.settings.sixicon %}
      <li>{{ section.settings.icon6 }}</li>
      {% endif %} 
    </ul>
</div>
</div>

{% schema %}
 {
   "name": "newlogo-sectionhome",
   "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
     {
            "type": "html",
            "id": "icon1",
            "label": "Svg for icon"
          },
     
          {
            "type": "checkbox",
            "id": "showforbesicon",
            "label": "Show Fist icon",
            "default": true
          },
      {
            "type": "html",
            "id": "icon2",
            "label": "Svg for icon"
          },
          {
            "type": "checkbox",
            "id": "showvogueicon",
            "label": "Show Second icon",
            "default": true
          },
      {
            "type": "html",
            "id": "icon3",
            "label": "Svg for icon"
          },
          {
            "type": "checkbox",
            "id": "showcqicon",
            "label": "Show Third icon",
            "default": true
          },
      {
            "type": "html",
            "id": "icon4",
            "label": "Svg for icon"
          },
          {
            "type": "checkbox",
            "id": "showmarieicon",
            "label": "Show Fourth icon",
            "default": true
          },
      {
            "type": "html",
            "id": "icon5",
            "label": "Svg for icon"
          },
          {
            "type": "checkbox",
            "id": "showsydneyicon",
            "label": "Show Fifth icon",
            "default": true
          },
      {
            "type": "html",
            "id": "icon6",
            "label": "Svg for icon"
          },
         {
            "type": "checkbox",
            "id": "sixicon",
            "label": "Show Sixth icon",
            "default": true
          }  
   ]
 }
{% endschema %}
